      "ui_language": [
        "Applications open in limited waves",
        "Invite required"
      ]
    }
  },
  "billing_flow": {
    "steps": [
      "User applies / receives invite",
      "Invite code unlocks checkout visibility",
      "Checkout creates customer via Lemon Squeezy",
      "Webhook confirms payment",
      "Entitlement written to billing_subscriptions table",
      "App gates features by entitlement"
    ],
    "webhook_events": [
      {
        "event": "subscription_created",
        "action": "create_entitlement",
        "state": "active"
      },
      {
        "event": "subscription_updated",
        "action": "update_entitlement",
        "state": "active"
      },
      {
        "event": "subscription_cancelled",
        "action": "schedule_downgrade",
        "state": "grace_period"
      },
      {
        "event": "subscription_expired",
        "action": "disable_entitlement",
        "state": "inactive"
      },
      {
        "event": "subscription_payment_failed",
        "action": "mark_past_due",
        "state": "past_due"
      }
    ],
    "entitlement_state_machine": {
      "states": ["pending", "active", "past_due", "grace_period", "inactive"],
      "transitions": {
        "pending_to_active": "on payment confirmed",
        "active_to_past_due": "on payment failed",
        "past_due_to_active": "on payment retry success",
        "active_to_grace_period": "on cancellation (access until period end)",
        "grace_period_to_inactive": "on period end"
      }
    }
  },
  "feature_gating": {
    "strategy": "entitlement-based",
    "gates": [
