# ============================================================================
# AFRO-CLIPZ Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git
# ============================================================================

# ----------------------------------------------------------------------------
# Core Infrastructure
# ----------------------------------------------------------------------------
PORT=8080
PYTHON_VERSION=3.12
PYTHONUNBUFFERED=1

# ----------------------------------------------------------------------------
# Video Processing Configuration
# ----------------------------------------------------------------------------
# Whisper model size: tiny, base, small, medium, large
WHISPER_MODEL=base

# Video file paths
VIDEO_INPUT_PATH=input_video.mp4
VIDEO_OUTPUT_PATH=edited_output.mp4

# User query for video clipping
USER_QUERY="Find all clips where there is discussion around GPT-4 Turbo"

# ----------------------------------------------------------------------------
# API Integration (Optional)
# ----------------------------------------------------------------------------
# Groq API for AI-powered segment selection
# Get your key from: https://console.groq.com/keys
# Leave as 'groq-key' to use stub mode (no real API calls)
GROQ_API_KEY=groq-key

# API endpoint (usually don't need to change this)
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# ----------------------------------------------------------------------------
# Cost Protection & Monitoring
# ----------------------------------------------------------------------------
# Enable resource usage monitoring
ENABLE_COST_MONITORING=true

# Memory limit in MB before triggering maintenance mode
FREE_TIER_LIMIT_MB=500

# Automatically shutdown when limit exceeded
AUTO_SHUTDOWN_ON_LIMIT=true

# Maintenance mode (set to true to activate maintenance page)
MAINTENANCE_MODE_ENABLED=false

# ----------------------------------------------------------------------------
# Deployment Configuration
# ----------------------------------------------------------------------------
# Target platform: railway, coolify, docker
DEPLOYMENT_TARGET=railway

# Deployment mode: zero-secrets, production
DEPLOYMENT_MODE=zero-secrets

# Debug mode (more verbose logging)
DEBUG=false

# ----------------------------------------------------------------------------
# VPN Configuration (Optional - for Hostinger VPN deployment)
# ----------------------------------------------------------------------------
VPN_ENABLED=false
VPN_INTERFACE=tun0
VPN_PROVIDER=hostinger

# ----------------------------------------------------------------------------
# Advanced Settings (Usually don't need to change)
# ----------------------------------------------------------------------------
# FFmpeg settings
FFMPEG_LOGLEVEL=error

# MoviePy settings
IMAGEIO_FFMPEG_EXE=/usr/bin/ffmpeg

# Whisper cache directory
WHISPER_CACHE_DIR=~/.cache/whisper
